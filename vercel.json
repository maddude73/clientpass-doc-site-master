{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/server.js" }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    }
  ]
}